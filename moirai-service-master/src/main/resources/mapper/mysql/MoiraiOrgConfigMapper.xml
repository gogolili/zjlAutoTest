        update moirai_org_config
        <set>
            <if test="value != null">
                value = #{value,jdbcType=VARCHAR},
            </if>
            <if test="operaTime != null">
                opera_time = #{operaTime,jdbcType=VARCHAR},
            </if>
        </set>
        where oc_id = #{ocId,jdbcType=BIGINT}
