    <select id="selectListByCondition" parameterType="com.baiwang.moirai.model.role.MoiraiResourceSecurityCondition"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_Select"/>
        from moirai_security_control
        <where>
            <if test="status != null">
                and status = #{status,jdbcType=VARCHAR}
            </if>
            <if test="name != null">
                and name LIKE CONCAT('%',#{name,jdbcType=VARCHAR},'%')
            </if>
            <if test="descs != null">
                and descs = #{descs,jdbcType=VARCHAR}
            </if>
            <if test="realField != null">
                and real_field = #{realField,jdbcType=VARCHAR}
            </if>
        </where>
        order by id
    </select>

    <select id="selectByName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_Select"/>
        from moirai_security_control
        where name = #{name,jdbcType=VARCHAR}
        limit 1
    </select>

    <select id="getResourceSecurityList" parameterType="com.baiwang.moirai.model.role.MoiraiResourceSecurityCondition"
            resultMap="BaseResultMap">
        select
        con.id, con.status, con.name, con.descs, con.real_field
        from moirai_resource_security sec, moirai_security_control con
        where sec.security_control_id = con.id
        and sec.RESOURCE_ID = #{resourceId,jdbcType=BIGINT}
        <if test="resourceType != null">
            and sec.resource_type = #{resourceType,jdbcType=VARCHAR}
        </if>
        order by con.id
    </select>

