    <select id="queryUnbindSecurity" parameterType="com.baiwang.moirai.model.role.MoiraiResourceSecurityCondition"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_Select"/>
        from moirai_security_control
        where id not in (select security_control_id from moirai_resource_security where resource_id =
        #{resourceId,jdbcType=BIGINT}
        <if test="resourceType != null">
            and resource_type = #{resourceType,jdbcType=VARCHAR}
        </if>)
        order by id
    </select>
