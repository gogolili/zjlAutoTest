    <update id="updateByPrimaryKeySelective" parameterType="com.baiwang.moirai.model.role.MoiraiSecurityControl">
        update moirai_security_control
        <set>
            <if test="status != null">
                status = #{status,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
