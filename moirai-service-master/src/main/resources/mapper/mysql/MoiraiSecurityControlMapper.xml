        <where>
            <if test="resourceId != null">
                and resource_id = #{resourceId,jdbcType=BIGINT}
            </if>
            <if test="securityControlId != null">
                and security_control_id = #{securityControlId,jdbcType=BIGINT}
            </if>
            <if test="resourceType != null">
                and resource_type = #{resourceType,jdbcType=VARCHAR}
            </if>
            <if test="resourceId == null and securityControlId == null and resourceType == null">
                and 1 = 2
            </if>
        </where>
    </delete>

